import requests
import sys
import xml.etree.ElementTree as ET
import base64


service = 'http://104.211.245.148/webconsole/api'

loginReq = '<DM2ContentIndexing_CheckCredentialReq username="Cvadmin" password="Qwerty@123" />'

r = requests.post(service + 'Login', data=loginReq)

token = None

if r.status_code == 200:
   root = ET.fromstring(r.text)
   if 'token' in root.attrib:
      token = root.attrib['token']
      print ("Login Successful")
   else:
      print ("Login Failed")
      sys.exit(0)
else:
   print ('there was an error logging in')
